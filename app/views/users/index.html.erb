<% if current_user.present? %>
  <p>
  <b> It's <%= current_user.login %> </b>
</p>

<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>

<!--
  <p>
    <%= f.label :user_agent %><br />
    <%= f.text_field :user_agent %> 
  </p> 

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
-->

  <p>
    <%= f.submit 'Create' %>
  </p>

<% end %>
<% end %>

<p>
  <b>Last message :</b>
  <% @messages.each{|message| %>
  <li>
  <%= message.body %>
  <br>
  <h6>
  <%= ' Poster le ' %> 
  <%= message.created_at %>
  <%= ' avec ' %>
  <%= message.user_agent %>
  <%= ' Par ' %>
  <%= link_to message.user.login, user_path(message.user.login) %>
  </h6>
    </li>
    <% } %>
</p>

<%= will_paginate @messages %>
